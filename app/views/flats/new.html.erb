<div class="container">

  <h1 class ="d-flex justify-content-center mt-5">Add a flat</h1>

  <%= simple_form_for [@flat] do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit "Add", class: "btn btn-primary" %>
  <% end %>

</div>
