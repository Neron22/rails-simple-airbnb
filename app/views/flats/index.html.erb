<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">

      <h1 class ="d-flex justify-content-center my-5">All our flats (<%= @flats.count %>)</h1>
      <div class="cards">
        <% @flats.each do |flat|%>
          <div class="card mx-2">
            <div class="card-top">
              <div class="card-titles">
                  <h3><strong><%= flat.name %></strong></h2>
                  <p><%= flat.address %></p>
              </div>
              <div class="card-inline-informations d-flex justify-content-flex">
                  <i class="fa-solid fa-euro-sign px-1 py-3">  <%= flat.number_of_guests %></i>
                  <i class="fa-solid fa-user-group px-1 py-3">  <%= flat.price_per_night %></i>
              </div>
            </div>
            <div class="card-bottom">
              <div class="card-more-info">
                <%= link_to "More info", flat_path(flat) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
